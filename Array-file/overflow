public class Array {

    public static void main(String[] args) {
        
        int c[]={1,2,3};
        for(int i=0;i<c.length;i++)
        {
           
            System.out.println("the value" + c[3]);    //the c[3] is out of array bound hence it will result in exception error.
        }
        
    }
    
} 

